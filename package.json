{
  "name": "og-siparis-backend",
  "version": "2.0.0",
  "description": "Enterprise-Grade Order Management System Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "start": "NODE_ENV=production node server.js",
    "build": "next build",
    "test": "node tests/api-test-suite.js",
    "test:security": "node tests/security/automated-security-tests.js",
    "test:load": "node tests/load-test.js",
    "test:smoke": "node tests/smoke.js",
    "test:extended": "node tests/extended.js",
    "test:api": "node tests/api-sanity.js",
    "deploy": "node scripts/production-deployment.js",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "node prisma/seeds/index.cjs",
    "monitoring:start": "node scripts/start-monitoring.js",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "audit": "npm audit --audit-level moderate",
    "clean": "rm -rf .next node_modules package-lock.json",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "formidable": "^3.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "node prisma/seeds/index.cjs"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "order-management",
    "enterprise",
    "api",
    "prisma",
    "nextjs",
    "production-ready"
  ],
  "author": "OG Siparis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/og-siparis/backend.git"
  },
  "bugs": {
    "url": "https://github.com/og-siparis/backend/issues"
  },
  "homepage": "https://github.com/og-siparis/backend#readme"
}