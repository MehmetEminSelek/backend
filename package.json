{
  "name": "og-siparis-backend",
  "version": "1.0.0",
  "description": "OG Sipariş Yönetim Sistemi - Backend API",
  "homepage": "https://ogsiparis.com",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "dev:nextjs": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "start:nextjs": "next start",
    "start:prod": "NODE_ENV=production node server.js",
    "generate": "prisma generate",
    "pull": "prisma db pull",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "seed": "node prisma/seeds/index.js",
    "seed:clear": "node prisma/seeds/index.js clear",
    "seed:hammade": "node -e \"require('./prisma/seeds/index').seedHammadeYariMamuller().then(console.log)\"",
    "seed:sube": "node -e \"require('./prisma/seeds/index').seedSubeOperasyonBirimleri().then(console.log)\"",
    "seed:personel": "node prisma/seeds/seed-personel-bilgileri.js",
    "seed:cari": "node -e \"require('./prisma/seeds/index').seedCariMusteriler().then(console.log)\"",
    "seed:urun": "node -e \"require('./prisma/seeds/index').seedGuncelUrunFiyatlari().then(console.log)\"",
    "seed:recete": "node -e \"require('./prisma/seeds/index').seedReceteler().then(console.log)\"",
    "seed:dropdown": "node -e \"require('./prisma/seeds/index').seedSiparisDropdownListeleri().then(console.log)\"",
    "seed:odeme": "node -e \"require('./prisma/seeds/index').seedOdemeYontemleri().then(console.log)\"",
    "db:reset": "npm run seed:clear && npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.1.5",
    "formidable": "^3.5.4",
    "git": "^0.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "morgan": "^1.10.0",
    "next": "^13.4.12",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "vue-chartjs": "^5.3.2",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "prisma": "^6.6.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
