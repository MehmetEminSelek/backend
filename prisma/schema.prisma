generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================================================
// üë• USER MANAGEMENT & AUTHENTICATION
// ===================================================================

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  username           String   @unique
  passwordHash       String
  ad                 String
  soyad              String?
  telefon            String?
  role               Role     @default(USER)
  aktif              Boolean  @default(true)
  sonGiris           DateTime?
  girisYili          Int?
  sgkDurumu          String?
  gunlukUcret        Float?
  bolum              String?
  unvan              String?
  iseBaslamaTarihi   DateTime?
  subeId             Int?
  sube               Sube?    @relation(fields: [subeId], references: [id])
  
  // Audit fields
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  createdBy          Int?
  
  // Relations
  olusturduguSiparisler   Siparis[] @relation("SiparisOlusturan")
  onayladigiSiparisler    Siparis[] @relation("SiparisOnaylayan")
  stokHareketleri         StokHareket[]
  stokTransferleri        StokTransfer[]
  fiyatGuncelleme         Fiyat[]
  
  @@index([role])
  @@index([aktif])
  @@index([subeId])
}

enum Role {
  ADMIN
  MANAGER
  USER
  PRODUCTION
  SALES
  ACCOUNTING
}

// ===================================================================
// üìç ORGANIZATIONAL STRUCTURE
// ===================================================================

model Sube {
  id                Int       @id @default(autoincrement())
  ad                String    @unique
  kod               String    @unique
  adres             String?
  telefon           String?
  email             String?
  mudur             String?
  aktif             Boolean   @default(true)
  siraNo            Int?
  
     // Relations
   siparisler        Siparis[]
   cariler           Cari[]
   kullanicilar      User[]
   stokTransferleri  StokTransfer[]
   hedefSiparisler   Siparis[]       @relation("HedefSube")
   kaynakTransferler StokTransfer[]  @relation("KaynakSube")
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@index([aktif])
}

model TeslimatTuru {
  id                Int       @id @default(autoincrement())
  ad                String    @unique
  kod               String    @unique
  aciklama          String?
  varsayilanKargo   String?   // Default kargo ≈üirketi
  ekstraMaliyet     Float?    @default(0)
  aktif             Boolean   @default(true)
  siraNo            Int?
  
  // Relations
  siparisler        Siparis[]
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@index([aktif])
}

// ===================================================================
// üè™ CUSTOMER MANAGEMENT (CRM)
// ===================================================================

model Cari {
  id                Int           @id @default(autoincrement())
  musteriKodu       String        @unique
  ad                String
  soyad             String?
  unvan             String?       // ≈ûirket unvanƒ±
  tipi              CariTipi      @default(BIREYSEL)
  vergiNo           String?       @unique
  tcNo              String?       @unique
  
  // Contact Info
  telefon           String?
  email             String?       
  website           String?
  
  // Address Info
  adres             String?
  il                String?
  ilce              String?
  postaKodu         String?
  
  // Commercial Info
  bakiye            Float         @default(0)
  vadeGunu          Int?          @default(0)
  kredLimiti        Float?        @default(0)
  riskGrubu         String?       @default("Normal")
  musteriSegmenti   String?       // Premium, Gold, Silver, Bronze
  
  // System Info
  subeId            Int?
  sube              Sube?         @relation(fields: [subeId], references: [id])
  aktif             Boolean       @default(true)
  ozelMusteriMi     Boolean       @default(false)
  
  // Relations
  siparisler        Siparis[]
  hareketler        CariHareket[]
  odemeler          CariOdeme[]
  
  // Audit fields
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         Int?
  
  @@index([tipi])
  @@index([aktif])
  @@index([subeId])
  @@index([musteriKodu])
  @@index([telefon])
  @@index([email])
}

enum CariTipi {
  BIREYSEL
  KURUMSAL
  TEDARIKCI
  DIGER
}

model CariHareket {
  id                Int       @id @default(autoincrement())
  cariId            Int
  cari              Cari      @relation(fields: [cariId], references: [id], onDelete: Cascade)
  
  tip               HareketTipi
  tutar             Float
  aciklama          String?
  belgeNo           String?
  vadeTarihi        DateTime?
  
  // Relations
  siparisId         Int?
  siparis           Siparis?  @relation(fields: [siparisId], references: [id])
  
  createdAt         DateTime  @default(now())
  createdBy         Int?
  
  @@index([cariId])
  @@index([tip])
  @@index([createdAt])
}

enum HareketTipi {
  SIPARIS
  ODEME
  IADE
  DUZELTME
  VADE_FAIZI
  INDIRIM
}

model CariOdeme {
  id                Int         @id @default(autoincrement())
  cariId            Int
  cari              Cari        @relation(fields: [cariId], references: [id], onDelete: Cascade)
  
  tutar             Float
  odemeYontemi      OdemeYontemi
  referansNo        String?     // Dekont no, √ßek no vs.
  aciklama          String?
  odemeTarihi       DateTime    @default(now())
  
  // Relations  
  siparisId         Int?
  siparis           Siparis?    @relation(fields: [siparisId], references: [id])
  
  createdAt         DateTime    @default(now())
  createdBy         Int?
  
  @@index([cariId])
  @@index([odemeYontemi])
  @@index([odemeTarihi])
}

enum OdemeYontemi {
  NAKIT
  KREDI_KARTI
  BANKA_HAVALESI
  EFT
  CEK
  SENET
  DIGER
}

// ===================================================================
// üì¶ PRODUCT & INVENTORY MANAGEMENT
// ===================================================================

model UrunKategori {
  id                Int      @id @default(autoincrement())
  ad                String   @unique
  kod               String   @unique
  aciklama          String?
  parentId          Int?     // Hierarchical categories
  parent            UrunKategori? @relation("KategoriHiyerarsi", fields: [parentId], references: [id])
  altKategoriler    UrunKategori[] @relation("KategoriHiyerarsi")
  
  // UI Properties
  renk              String?  @default("#2196F3")
  ikon              String?  @default("mdi-package-variant")
  siraNo            Int?
  aktif             Boolean  @default(true)
  
  // Relations
  urunler           Urun[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([aktif])
  @@index([parentId])
}

model Urun {
  id                  Int             @id @default(autoincrement())
  ad                  String          @unique
  kod                 String          @unique
  barkod              String?         @unique
  
  // Classification
  kategoriId          Int?
  kategori            UrunKategori?   @relation(fields: [kategoriId], references: [id])
  
  // Description & Media
  aciklama            String?
  kisaAciklama        String?
  anaGorsel           String?
  galeriGorseller     Json?           // Array of image URLs
  
  // Physical Properties
  agirlik             Float?          // Standart aƒüƒ±rlƒ±k (gram)
  boyutlar            Json?           // {en, boy, yukseklik}
  renk                String?
  mensei              String?
  
  // Production Info
  uretimSuresi        Int?            // Dakika
  rafOmru             Int?            // G√ºn
  saklamaKosullari    String?
  maliyetFiyati       Float?
  karMarji            Float?          @default(25.0)
  
  // Stock Management
  stokKodu            String?         @unique
  minStokMiktari      Float?          @default(0)
  maxStokMiktari      Float?
  kritikStokSeviye    Float?          @default(10)
  mevcutStok          Float?          @default(0)
  
  // Sales Info
  satisaBirimi        SatisBirimi     @default(KG)
  minSatisMiktari     Float?          @default(0.1)
  maxSatisMiktari     Float?
  
  // Status Flags
  aktif               Boolean         @default(true)
  satisaUygun         Boolean         @default(true)
  uretimdeAktif       Boolean         @default(true)
  ozelUrun            Boolean         @default(false)
  yeniUrun            Boolean         @default(false)
  indirimliUrun       Boolean         @default(false)
  
  // SEO & Search
  seoBaslik           String?
  seoAciklama         String?
  anahtarKelimeler    Json?           // Array of keywords
  
     // Relations
   fiyatlar            Fiyat[]
   siparisKalemleri    SiparisKalemi[]
   receteler           Recipe[]
   stokHareketleri     StokHareket[]
   stokTransferleri    StokTransfer[]  @relation("UrunTransfer")
  
  // Audit fields
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  createdBy           Int?
  updatedBy           Int?
  
  @@index([kategoriId])
  @@index([aktif])
  @@index([satisaUygun])
  @@index([stokKodu])
  @@index([barkod])
}

enum SatisBirimi {
  KG
  GRAM
  ADET
  PAKET
  KUTU
  TEPSI
}

// ===================================================================
// üí∞ PRICING MANAGEMENT
// ===================================================================

model Fiyat {
  id                Int         @id @default(autoincrement())
  urunId            Int
  urun              Urun        @relation(fields: [urunId], references: [id], onDelete: Cascade)
  
  // Price Details
  fiyat             Float
  birim             SatisBirimi
  fiyatTipi         FiyatTipi   @default(NORMAL)
  
  // Quantity Ranges
  minMiktar         Float?      @default(0)
  maxMiktar         Float?
  
  // Discounts & Taxes
  iskonto           Float?      @default(0)
  vergiOrani        Float?      @default(18)
  
  // Validity Period
  gecerliTarih      DateTime    @db.Date
  bitisTarihi       DateTime?   @db.Date
  aktif             Boolean     @default(true)
  
  // Relations
  createdAt         DateTime    @default(now())
  createdBy         Int?
  user              User?       @relation(fields: [createdBy], references: [id])
  
  @@unique([urunId, birim, fiyatTipi, gecerliTarih])
  @@index([aktif])
  @@index([fiyatTipi])
  @@index([gecerliTarih])
}

enum FiyatTipi {
  NORMAL
  KAMPANYA
  TOPTAN
  PERAKENDE
  OZEL_FIYAT
  PROMOSYON
}

// ===================================================================
// üìã ORDER MANAGEMENT SYSTEM
// ===================================================================

model Siparis {
  id                    Int                @id @default(autoincrement())
  siparisNo             String             @unique @default(uuid())
  
  // Date & Delivery
  tarih                 DateTime           @db.Date
  teslimTarihi          DateTime?          @db.Date
  
  // Customer Info
  cariId                Int?
  cari                  Cari?              @relation(fields: [cariId], references: [id])
  
  // Manual Customer Info (for non-registered customers)
  gonderenAdi           String
  gonderenTel           String
  gonderenEmail         String?
  aliciAdi              String?
  aliciTel              String?
  aliciEmail            String?
  
  // Address Info
  teslimatAdresi        String?
  il                    String?
  ilce                  String?
  postaKodu             String?
  
  // Order Details
  teslimatTuruId        Int
  teslimatTuru          TeslimatTuru       @relation(fields: [teslimatTuruId], references: [id])
  subeId                Int?
  sube                  Sube?              @relation(fields: [subeId], references: [id])
  
  // Pricing
  araToplam             Float              @default(0)
  kdvToplam             Float              @default(0)
  kargoUcreti           Float              @default(0)
  digerHizmetTutari     Float              @default(0)
  toplamTutar           Float              @default(0)
  
  // Order Status
  durum                 SiparisDurumu      @default(BEKLIYOR)
  onaylanmaDurumu       OnayDurumu         @default(BEKLIYOR)
  hazirlanmaDurumu      HazirlamaDurumu    @default(BEKLIYOR)
  kargoDurumu           KargoDurumu?       
  
     // Cargo Info
   kargoSirketi          String?
   kargoTakipNo          String?
   kargoNotu             String?
   kargoTarihi           DateTime?
   
   // Transfer Info (for branch orders)
   hedefSubeId           Int?
   hedefSube             Sube?              @relation("HedefSube", fields: [hedefSubeId], references: [id])
  
  // Notes & Special Instructions
  siparisNotu           String?
  ozelTalepler          String?
  dahiliNotlar          String?           // Internal notes
  
  // Priority & Urgency
  oncelik               OncelikSeviyesi    @default(NORMAL)
  acilmi                Boolean            @default(false)
  
  // Relations
  kalemler              SiparisKalemi[]
  odemeler              CariOdeme[]
  hareketler            CariHareket[]
  
  // Audit fields
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  createdBy             Int?
  olusturan             User?              @relation("SiparisOlusturan", fields: [createdBy], references: [id])
  onaylayanId           Int?
  onaylayan             User?              @relation("SiparisOnaylayan", fields: [onaylayanId], references: [id])
  onaylanmaTarihi       DateTime?
  
  @@index([durum])
  @@index([onaylanmaDurumu])
  @@index([hazirlanmaDurumu])
  @@index([cariId])
  @@index([tarih])
  @@index([createdAt])
}

enum SiparisDurumu {
  BEKLIYOR
  ONAYLANDI
  HAZIRLANIYOR
  HAZIR
  KARGODA
  TESLIM_EDILDI
  IPTAL
}

enum OnayDurumu {
  BEKLIYOR
  ONAYLANDI
  REDDEDILDI
}

enum HazirlamaDurumu {
  BEKLIYOR
  HAZIRLANIYOR
  HAZIRLANDI
  PAKETLENDI
}

enum KargoDurumu {
  HAZIRLANACAK
  KARGOYA_VERILECEK
  KARGODA
  DAGITIMDA
  TESLIM_EDILDI
  TESLIM_EDILEMEDI
  IADE
}

enum OncelikSeviyesi {
  DUSUK
  NORMAL
  YUKSEK
  ACIL
}

model SiparisKalemi {
  id                Int           @id @default(autoincrement())
  siparisId         Int
  siparis           Siparis       @relation(fields: [siparisId], references: [id], onDelete: Cascade)
  
  // Product Info
  urunId            Int
  urun              Urun          @relation(fields: [urunId], references: [id])
  urunAdi           String        // Snapshot of product name
  urunKodu          String?       // Snapshot of product code
  
  // Quantity & Pricing
  miktar            Float
  birim             SatisBirimi
  birimFiyat        Float
  kdvOrani          Float         @default(18)
  iskonto           Float         @default(0)
  araToplam         Float         // miktar * birimFiyat
  kdvTutari         Float         // araToplam * kdvOrani / 100
  toplamTutar       Float         // araToplam + kdvTutari - iskonto
  
  // Packaging Info
  ambalajId         Int?
  ambalaj           Ambalaj?      @relation(fields: [ambalajId], references: [id])
  tepsiTavaId       Int?
  tepsiTava         TepsiTava?    @relation(fields: [tepsiTavaId], references: [id])
  kutuId            Int?
  kutu              Kutu?         @relation(fields: [kutuId], references: [id])
  
  // Production Info
  hazirlanmaDurumu  HazirlamaDurumu @default(BEKLIYOR)
  uretimNotu        String?
  
  // Relations
  stokHareketleri   StokHareket[]
  
  @@index([siparisId])
  @@index([urunId])
  @@index([hazirlanmaDurumu])
}

// ===================================================================
// üì¶ PACKAGING MANAGEMENT
// ===================================================================

model Ambalaj {
  id                Int             @id @default(autoincrement())
  ad                String          @unique
  kod               String          @unique
  aciklama          String?
  fiyat             Float?          @default(0)
  agirlik           Float?          // gram
  aktif             Boolean         @default(true)
  
  // Relations
  siparisKalemleri  SiparisKalemi[]
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  
  @@index([aktif])
}

model TepsiTava {
  id                Int             @id @default(autoincrement())
  ad                String          @unique
  kod               String          @unique
  aciklama          String?
  fiyat             Float           @default(0)
  agirlik           Float?          // gram
  boyut             String?         // Small, Medium, Large
  malzeme           String?         // Aluminum, Plastic, etc.
  aktif             Boolean         @default(true)
  
  // Relations
  siparisKalemleri  SiparisKalemi[]
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  
  @@index([aktif])
}

model Kutu {
  id                Int             @id @default(autoincrement())
  ad                String          @unique
  kod               String          @unique
  aciklama          String?
  fiyat             Float?          @default(0)
  agirlik           Float?          // gram
  boyutlar          Json?           // {en, boy, yukseklik}
  aktif             Boolean         @default(true)
  
  // Relations
  siparisKalemleri  SiparisKalemi[]
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  
  @@index([aktif])
}

// ===================================================================
// üßæ RECIPE & PRODUCTION MANAGEMENT
// ===================================================================

model Material {
  id                Int                 @id @default(autoincrement())
  ad                String              @unique
  kod               String              @unique
  tipi              MaterialTipi
  birim             MaterialBirimi      @default(KG)
  birimFiyat        Float?              @default(0)
  
  // Stock Info
  mevcutStok        Float               @default(0)
  minStokSeviye     Float               @default(0)
  maxStokSeviye     Float?
  kritikSeviye      Float               @default(10)
  
  // Properties
  aciklama          String?
  tedarikci         String?
  rafOmru           Int?                // g√ºn
  saklamaKosullari  String?
  aktif             Boolean             @default(true)
  
     // Relations
   receteIcerikleri  RecipeIngredient[]
   stokHareketleri   StokHareket[]
   stokTransferleri  StokTransfer[]      @relation("MaterialTransfer")
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  @@index([tipi])
  @@index([aktif])
  @@index([kod])
}

enum MaterialTipi {
  HAMMADDE
  YARI_MAMUL
  YARDIMCI_MADDE
  AMBALAJ_MALZEMESI
}

enum MaterialBirimi {
  KG
  GRAM
  LITRE
  ML
  ADET
  PAKET
}

model Recipe {
  id                Int                 @id @default(autoincrement())
  ad                String              @unique
  kod               String              @unique
  
  // Product Relation
  urunId            Int?
  urun              Urun?               @relation(fields: [urunId], references: [id])
  
  // Recipe Details
  aciklama          String?
  porsiyon          Float?              @default(1)   // Ka√ß porsiyon i√ßin
  hazirlamaSuresi   Int?                // Dakika
  pisirmeSuresi     Int?                // Dakika
  
  // Instructions
  hazirlanisi       Json?               // Step by step instructions
  notlar            String?
  
  // Costing
  toplamMaliyet     Float?              @default(0)
  porsinoyonMaliyet Float?              @default(0)
  
  // Status
  aktif             Boolean             @default(true)
  test              Boolean             @default(false)
  versiyon          String              @default("1.0")
  
  // Relations
  icerikelek        RecipeIngredient[]
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  createdBy         Int?
  
  @@unique([urunId, versiyon])
  @@index([aktif])
  @@index([urunId])
}

model RecipeIngredient {
  id                Int                 @id @default(autoincrement())
  recipeId          Int
  recipe            Recipe              @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  materialId        Int
  material          Material            @relation(fields: [materialId], references: [id])
  
  // Quantity
  miktar            Float
  birim             MaterialBirimi
  
  // Notes
  hazirlamaNotu     String?             // "ince doƒüranmƒ±≈ü", "kaynatƒ±lmƒ±≈ü" vs.
  zorunlu           Boolean             @default(true)
  alternatifOlabilir Boolean           @default(false)
  
  siraNo            Int?                // Kullanƒ±m sƒ±rasƒ±
  
  @@unique([recipeId, materialId])
  @@index([recipeId])
  @@index([materialId])
}

// ===================================================================
// üìä STOCK MANAGEMENT & TRACKING
// ===================================================================

model StokHareket {
  id                Int               @id @default(autoincrement())
  
  // Item Reference
  urunId            Int?
  urun              Urun?             @relation(fields: [urunId], references: [id])
  materialId        Int?
  material          Material?         @relation(fields: [materialId], references: [id])
  
  // Movement Details
  tip               StokHareketTipi
  miktar            Float
  birim             String
  
  // Reference Documents
  siparisKalemiId   Int?
  siparisKalemi     SiparisKalemi?    @relation(fields: [siparisKalemiId], references: [id])
  transferId        Int?
  transfer          StokTransfer?     @relation(fields: [transferId], references: [id])
  
  // Additional Info
  aciklama          String?
  referansNo        String?           // Fi≈ü no, fatura no vs.
  
  // Before/After Stock Levels
  oncekiStok        Float?
  sonrakiStok       Float?
  
  // Audit
  createdAt         DateTime          @default(now())
  createdBy         Int?
  user              User?             @relation(fields: [createdBy], references: [id])
  
  @@index([tip])
  @@index([urunId])
  @@index([materialId])
  @@index([createdAt])
}

enum StokHareketTipi {
  GIRIS
  CIKIS
  TRANSFER
  FIRE
  SAYIM_FAZLA
  SAYIM_EKSIK
  URETIM_GIRDI
  URETIM_CIKTI
  IADE
  DUZELTME
}

model StokTransfer {
  id                Int               @id @default(autoincrement())
  transferNo        String            @unique @default(uuid())
  
  // Transfer Details
  kaynakSubeId      Int?
  kaynakSube        Sube?             @relation("KaynakSube", fields: [kaynakSubeId], references: [id])
  hedefSubeId       Int?
  hedefSube         Sube?             @relation(fields: [hedefSubeId], references: [id])
  
  // Items can be either products or materials
  urunId            Int?
  urun              Urun?             @relation("UrunTransfer", fields: [urunId], references: [id])
  materialId        Int?
  material          Material?         @relation("MaterialTransfer", fields: [materialId], references: [id])
  
  miktar            Float
  birim             String
  aciklama          String?
  
  // Status
  durum             TransferDurumu    @default(BEKLIYOR)
  gonderimTarihi    DateTime?
  teslimTarihi      DateTime?
  
  // Relations
  stokHareketleri   StokHareket[]
  
  // Audit
  createdAt         DateTime          @default(now())
  createdBy         Int?
  user              User?             @relation(fields: [createdBy], references: [id])
  onaylayanId       Int?
  teslimAlanId      Int?
  
  @@index([durum])
  @@index([kaynakSubeId])
  @@index([hedefSubeId])
}

enum TransferDurumu {
  BEKLIYOR
  ONAYLANDI
  GONDERILDI
  TESLIM_EDILDI
  IPTAL
}

// ===================================================================
// üéØ SYSTEM CONFIGURATION & SETTINGS
// ===================================================================

model SystemSetting {
  id                Int               @id @default(autoincrement())
  key               String            @unique
  value             String
  description       String?
  category          String?
  dataType          SettingDataType   @default(STRING)
  
  updatedAt         DateTime          @updatedAt
  updatedBy         Int?
}

enum SettingDataType {
  STRING
  NUMBER
  BOOLEAN
  JSON
  DATE
}