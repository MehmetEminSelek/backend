# OG Project - Environment Variables Template
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# Database Configuration (Hostinger CyberPanel)
DATABASE_URL="postgresql://ogform:db_pa@localhost:5432/db_name?schema=public"

# Alternative MySQL (eğer PostgreSQL yoksa)
# DATABASE_URL="mysql://db_username:db_password@localhost:3306/db_name"

# JWT Secret (güvenli bir string oluşturun)
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"

# Production Environment
NODE_ENV=production

# Domain Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
CORS_ORIGIN=https://yourdomain.com

# Port (CyberPanel otomatik atar)
PORT=8080

# Email Configuration (opsiyonel)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads 