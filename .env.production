# OG Backend API - Production Environment
# Subdomain: api.ogsiparis.com

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://ogform:secret@localhost:5432/ogformdb?schema=public"

# JWT Secret (production için güçlü bir key)
JWT_SECRET="og-siparis-super-secret-jwt-key-production-2024-very-long-and-secure"

# Production Environment
NODE_ENV=production

# API Domain Configuration (Backend subdomain)
NEXT_PUBLIC_API_URL=https://api.ogsiparis.com/api
CORS_ORIGIN=https://ogsiparis.com

# Port (CyberPanel otomatik atar)
PORT=8080

# Email Configuration (Hostinger SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=admin@ogsiparis.com
SMTP_PASS=your-email-password

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12 