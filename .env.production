# OG Backend API - Production Environment
# Domain: ogsiparis.com

# Database Configuration (Production PostgreSQL)
DATABASE_URL="postgresql://ogform:${DB_PASSWORD}@localhost:5432/ogformdb?schema=public"

# JWT Secret (Production - Güçlü bir secret kullanın!)
JWT_SECRET="${JWT_SECRET}"

# Production Environment
NODE_ENV=production
PORT=3000

# API Domain Configuration (Production)
NEXT_PUBLIC_API_URL=https://ogsiparis.com/api
CORS_ORIGIN=https://ogsiparis.com

# Email Configuration (Production)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=admin@ogsiparis.com
SMTP_PASS="${SMTP_PASS}"

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_DIR=/var/www/ogsiparis.com/uploads

# Security (Production)
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET="${SESSION_SECRET}"
SESSION_NAME=og_session
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HIDE_POWERED_BY=true
TRUST_PROXY=true

# Optional Services
SMS_API_KEY="${SMS_API_KEY}"
SMS_API_SECRET="${SMS_API_SECRET}"
SMS_SENDER="${SMS_SENDER}"
WHATSAPP_API_URL="${WHATSAPP_API_URL}"
WHATSAPP_ACCESS_TOKEN="${WHATSAPP_ACCESS_TOKEN}"
WHATSAPP_PHONE_NUMBER_ID="${WHATSAPP_PHONE_NUMBER_ID}" 