# OG Backend API - Production Environment
# Domain: ogsiparis.com

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://ogform:secret@localhost:5432/ogformdb?schema=public"

# JWT Secret (production için güçlü bir key)
JWT_SECRET="og-siparis-super-secret-jwt-key-production-2024-very-long-and-secure"

# Production Environment
NODE_ENV=production
PORT=3000

# API Domain Configuration
NEXT_PUBLIC_API_URL=https://ogsiparis.com:3000/api
CORS_ORIGIN=https://ogsiparis.com

# Email Configuration (Hostinger SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=admin@ogsiparis.com
SMTP_PASS=your-email-password

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12 