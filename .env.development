# =================================
# OG SİPARİŞ YÖNETİM SİSTEMİ - BACKEND DEVELOPMENT
# =================================

# Database Configuration - PostgreSQL Development
DATABASE_URL="postgresql://ogform:secret@localhost:5432/ogformdb?schema=public"

# JWT Security (Development)
JWT_SECRET="dev-secret-key-2024-very-long-for-jwt-minimum-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Password Security
BCRYPT_ROUNDS=10

# Rate Limiting (More lenient for dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
LOGIN_RATE_LIMIT_MAX=10

# Session Security
SESSION_SECRET="dev-session-secret-2024"
SESSION_TIMEOUT_MS=7200000

# CSRF Protection
CSRF_SECRET="dev-csrf-secret-2024"
CSRF_TOKEN_LENGTH=32

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,csv,doc,docx

# Security Headers
SECURE_HEADERS=false
TRUST_PROXY=false

# Environment
NODE_ENV=development
PORT=3000

# CORS Settings - DEVELOPMENT
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# API Security
API_KEY_SECRET="dev-api-key-secret-2024"
RATE_LIMIT_ENABLED=false

# Encryption Keys
ENCRYPTION_KEY="dev-encryption-key-2024"
DATA_ENCRYPTION_ENABLED=false

# Logging
LOG_LEVEL=debug
AUDIT_LOG_ENABLED=true
SECURITY_LOG_ENABLED=true

# Development Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# API URL for Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000/api 